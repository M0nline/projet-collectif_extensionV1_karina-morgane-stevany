{
    "manifest_version": 3,
    "name": "Minuteur",
    "version": "1.0",
    "description": "Compter le temps pass√© sur le navigateur",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_title": "Stop!",
        "default_popup": "popup.html",
        "icons": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    }
}